{
  // ============================================
  // HYPERFORGE TYPESCRIPT CONFIGURATION
  // ============================================
  // 
  // STAGED STRICT FLAG ROLLOUT:
  // - noUncheckedIndexedAccess: ~1057 new errors (requires getOrThrow/getOr migration)
  // - exactOptionalPropertyTypes: ~221 new errors (distinguishes missing vs undefined)
  // 
  // See src/types/utils.ts for helper functions designed for strict mode.
  // 
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    
    // ============================================
    // STRICT TYPE SAFETY - NON-NEGOTIABLE
    // ============================================
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    
    // ============================================
    // ADVANCED STRICT FLAGS (Staged Rollout)
    // ============================================
    // These flags are recommended but require codebase updates.
    
    "useUnknownInCatchVariables": true,
    
    // noUncheckedIndexedAccess: Makes arr[i] and obj[key] return T | undefined
    // Requires migrating all index access to use getOrThrow()/getOr() from @/types/utils
    // or adding explicit undefined checks. Enable after systematic audit.
    // Estimated: ~1057 errors to fix
    // "noUncheckedIndexedAccess": true,
    
    // exactOptionalPropertyTypes: Distinguishes { prop?: T } from { prop: T | undefined }
    // More granular but requires careful property definition review.
    // Estimated: ~221 errors to fix
    // "exactOptionalPropertyTypes": true,
    
    // ============================================
    // ADDITIONAL SAFETY
    // ============================================
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
