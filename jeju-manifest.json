{
  "name": "hyperscape",
  "displayName": "Hyperscape MMORPG",
  "version": "1.0.0",
  "type": "vendor",
  "description": "Hyperscape MMORPG integration with on-chain items, gold, and game events",
  "commands": {
    "dev": "bun run --watch app/",
    "build": "bun build app/ --outdir=dist",
    "test": "bun test tests/"
  },
  "ports": {
    "main": 8030
  },
  "dependencies": ["contracts", "config", "bazaar"],
  "optional": true,
  "enabled": true,
  "autoStart": false,
  "contracts": {
    "mmo/": "contracts/mmo/"
  },
  "ui": {
    "pages": ["app/games/hyperscape/"],
    "components": ["components/"]
  }
}
